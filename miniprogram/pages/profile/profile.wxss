/* pages/profile/profile.wxss */
.container {
  padding: 32rpx 24rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 用户信息区 */
.user-section {
  margin-bottom: 32rpx;
  text-align: center;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid var(--border-color);
}

.user-details {
  flex: 1;
  text-align: left;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 登录区域 */
.login-section {
  padding: 40rpx 32rpx;
}

.login-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.login-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.login-btn {
  max-width: 240rpx;
  margin: 0 auto;
}

/* 统计信息 */
.stats-section {
  margin-bottom: 48rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  text-align: center;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--primary-color);
}

/* 设置区域 */
.settings-section {
  margin-bottom: 48rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.setting-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.setting-icon {
  font-size: 40rpx;
  width: 64rpx;
  text-align: center;
}

.setting-content {
  flex: 1;
}

.setting-name {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.picker-text {
  font-size: 28rpx;
  color: var(--primary-color);
  padding: 12rpx 24rpx;
  border: 2rpx solid var(--primary-color);
  border-radius: var(--radius-small);
  min-width: 80rpx;
  text-align: center;
}

/* 数据管理和帮助支持 */
.data-section,
.help-section {
  margin-bottom: 48rpx;
}

.action-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.98);
  background-color: var(--background-color);
}

.action-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.action-icon {
  font-size: 40rpx;
  width: 64rpx;
  text-align: center;
}

.action-content {
  flex: 1;
}

.action-name {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.action-arrow {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-left: 16rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 48rpx 32rpx;
  margin-top: 48rpx;
  border-top: 2rpx solid var(--border-color);
}

.version-text {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.copyright-text {
  display: block;
  font-size: 22rpx;
  color: var(--text-secondary);
  opacity: 0.7;
}

/* RADIUS认证相关样式 */
.radius-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: white;
  border: 4rpx solid var(--border-color);
}

.auth-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 8rpx;
}

.auth-badge {
  background-color: var(--success-color);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.auth-time {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.logout-btn {
  margin-left: auto;
}

/* 响应式调整 */
@media screen and (max-width: 400px) {
  .container {
    padding: 24rpx 16rpx;
  }
  
  .user-info {
    flex-direction: column;
    text-align: center;
  }
  
  .user-details {
    text-align: center;
  }
  
  .stats-grid {
    flex-direction: column;
    gap: 24rpx;
  }
  
  .stat-item {
    width: 100%;
    padding: 16rpx;
    background-color: var(--background-color);
    border-radius: var(--radius-medium);
  }
  
  .setting-item,
  .action-item {
    padding: 24rpx;
  }
}
