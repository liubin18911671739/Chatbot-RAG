/* pages/history/history.wxss */
.container {
  padding: 32rpx 24rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  margin-bottom: 48rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.clear-all-btn {
  padding: 12rpx 24rpx;
  background-color: #ef5350;
  color: white;
  border-radius: var(--radius-medium);
  font-size: 24rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 控制区域 */
.controls-section {
  margin-bottom: 32rpx;
}

/* 搜索栏 */
.search-container {
  margin-bottom: 24rpx;
}

.search-wrapper {
  position: relative;
  background-color: white;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.search-input {
  width: 100%;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  background-color: transparent;
}

.search-clear {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--text-secondary);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 排序选项 */
.sort-options {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: white;
  padding: 16rpx 24rpx;
  border-radius: var(--radius-medium);
  box-shadow: var(--shadow-light);
}

.sort-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.sort-btn {
  padding: 12rpx 20rpx;
  border-radius: var(--radius-small);
  font-size: 24rpx;
  color: var(--text-secondary);
  border: 2rpx solid var(--border-color);
  transition: all 0.3s;
}

.sort-btn.active {
  background-color: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

/* 历史记录容器 */
.history-container {
  margin-bottom: 48rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  background-color: white;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-light);
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 48rpx;
  line-height: 1.5;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 历史记录项 */
.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  transition: all 0.3s;
  border-left: 6rpx solid var(--primary-color);
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

/* 历史记录内容 */
.history-content {
  flex: 1;
  min-width: 0;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.scene-info {
  flex: 1;
  min-width: 0;
}

.scene-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  background-color: var(--background-color);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.history-time {
  font-size: 24rpx;
  color: var(--text-secondary);
  flex-shrink: 0;
  margin-left: 16rpx;
}

.history-preview {
  margin-top: 16rpx;
}

.preview-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 历史记录操作 */
.history-actions {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--background-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s;
}

.action-icon:active {
  background-color: var(--border-color);
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 32rpx;
}

.loading {
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 24rpx;
}

/* 统计信息 */
.stats-section {
  margin-top: 48rpx;
}

.stats-card {
  background-color: white;
  border-radius: var(--radius-large);
  padding: 32rpx;
  box-shadow: var(--shadow-light);
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 48rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stat-divider {
  width: 2rpx;
  height: 80rpx;
  background-color: var(--border-color);
}

/* 响应式调整 */
@media screen and (max-width: 400px) {
  .container {
    padding: 24rpx 16rpx;
  }
  
  .history-item {
    padding: 24rpx;
  }
  
  .history-header {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .history-time {
    margin-left: 0;
    align-self: flex-start;
  }
  
  .stats-card {
    gap: 32rpx;
  }
}
