/* pages/feedback/feedback.wxss */
.container {
  padding: 32rpx 24rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 区块样式 */
.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--primary-color);
}

.required {
  color: #ef5350;
  margin-left: 8rpx;
}

/* 反馈类型选择 */
.type-selector {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.type-item {
  background-color: white;
  border-radius: var(--radius-medium);
  padding: 32rpx 24rpx;
  text-align: center;
  border: 3rpx solid transparent;
  transition: all 0.3s;
  box-shadow: var(--shadow-light);
}

.type-item:active {
  transform: scale(0.98);
}

.type-item.active {
  border-color: var(--primary-color);
  background-color: rgba(46, 82, 102, 0.05);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.type-label {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 内容输入 */
.content-input-wrapper {
  position: relative;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 32rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: none;
  outline: none;
  background-color: transparent;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.char-count .warning {
  color: #ef5350;
}

/* 图片上传 */
.images-section {
  padding: 32rpx;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-medium);
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-medium);
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.image-add {
  width: 160rpx;
  height: 160rpx;
  border: 3rpx dashed var(--border-color);
  border-radius: var(--radius-medium);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--background-color);
  transition: all 0.3s;
}

.image-add:active {
  border-color: var(--primary-color);
  background-color: rgba(46, 82, 102, 0.05);
}

.add-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
}

.add-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.images-tip {
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 联系方式输入 */
.contact-input-wrapper {
  padding: 0;
  overflow: hidden;
}

.contact-input {
  width: 100%;
  padding: 32rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  background-color: transparent;
}

.contact-tip {
  margin-top: 16rpx;
  padding-left: 16rpx;
}

/* 提交区域 */
.submit-section {
  margin-bottom: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.submit-btn {
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: var(--radius-large);
}

.btn-disabled {
  background-color: var(--border-color) !important;
  color: var(--text-secondary) !important;
}

.clear-btn {
  padding: 24rpx;
  font-size: 28rpx;
}

/* 温馨提示 */
.tips-section {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-left: 6rpx solid var(--accent-color);
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 响应式调整 */
@media screen and (max-width: 400px) {
  .container {
    padding: 24rpx 16rpx;
  }
  
  .type-selector {
    grid-template-columns: 1fr;
  }
  
  .type-item {
    padding: 24rpx;
  }
  
  .images-grid {
    justify-content: center;
  }
  
  .image-item,
  .image-add {
    width: 120rpx;
    height: 120rpx;
  }
  
  .content-input {
    padding: 24rpx;
    min-height: 160rpx;
  }
}
