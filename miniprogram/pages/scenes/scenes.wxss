/* pages/scenes/scenes.wxss */
.container {
  padding: 32rpx 24rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 搜索栏 */
.search-container {
  margin-bottom: 48rpx;
}

.search-wrapper {
  position: relative;
  background-color: white;
  border-radius: var(--radius-large);
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.search-input {
  width: 100%;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  background-color: transparent;
}

.search-clear {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--text-secondary);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 上次选择提示 */
.last-scene-hint {
  background-color: #e8f5e8;
  border-left: 6rpx solid var(--accent-color);
  padding: 24rpx;
  border-radius: var(--radius-medium);
  margin-bottom: 32rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #2e7d32;
}

/* 场景容器 */
.scenes-container {
  margin-bottom: 48rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 48rpx;
}

/* 场景网格 */
.scenes-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 场景卡片 */
.scene-card {
  background-color: white;
  border-radius: var(--radius-large);
  padding: 32rpx;
  box-shadow: var(--shadow-light);
  position: relative;
  transition: all 0.3s;
  border: 3rpx solid transparent;
}

.scene-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

.scene-card.available {
  border-color: transparent;
}

.scene-card.developing {
  border-color: #ffa726;
}

.scene-card.unavailable {
  opacity: 0.6;
  background-color: #f5f5f5;
}

/* 场景图标 */
.scene-icon {
  font-size: 64rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

/* 场景信息 */
.scene-info {
  margin-bottom: 24rpx;
}

.scene-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  text-align: center;
}

.scene-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  text-align: center;
}

/* 状态指示器 */
.scene-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.status-available {
  background-color: var(--accent-color);
}

.status-developing {
  background-color: #ffa726;
}

.status-unavailable {
  background-color: #ef5350;
}

.status-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 选中标记 */
.selected-mark {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 32rpx;
}

.loading {
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 24rpx;
}

/* 底部信息 */
.bottom-info {
  background-color: white;
  border-radius: var(--radius-large);
  padding: 32rpx;
  margin-top: 48rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 32rpx;
}

.info-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 响应式设计 */
@media screen and (min-width: 600px) {
  .scenes-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
  }
}

@media screen and (max-width: 400px) {
  .container {
    padding: 24rpx 16rpx;
  }
  
  .scene-card {
    padding: 24rpx;
  }
  
  .scene-name {
    font-size: 32rpx;
  }
  
  .scene-description {
    font-size: 26rpx;
  }
}
