/* pages/access-denied/access-denied.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.restriction-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  line-height: 1.4;
}

/* 内容区域 */
.content {
  width: 100%;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.instructions-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.instructions {
  margin-bottom: 40rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.bullet {
  color: var(--primary-color);
  font-weight: bold;
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.instruction-text {
  flex: 1;
  font-size: 30rpx;
  color: #555;
}

/* 帮助按钮 */
.help-section {
  border-top: 1px solid #eee;
  padding-top: 30rpx;
}

.help-button {
  width: 100%;
  background: #f8f9fa;
  border: 1px solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #495057;
}

.help-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 操作按钮区域 */
.actions {
  width: 100%;
  margin-bottom: 40rpx;
}

.retry-button, .contact-button {
  width: 100%;
  border-radius: 12rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.retry-button {
  background: var(--primary-color);
  color: white;
}

.retry-button[disabled] {
  background: #ccc;
  color: #999;
}

.contact-button {
  background: var(--accent-color);
  color: white;
}

.button-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 联系信息 */
.contact-info {
  width: 100%;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.contact-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.contact-item {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}

.contact-label {
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.contact-value {
  color: #333;
  font-weight: 500;
}

/* 调试信息 */
.debug-info {
  width: 100%;
  background: #f8f9fa;
  border: 1px solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 30rpx;
}

.debug-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #495057;
  margin-bottom: 16rpx;
}

.debug-item {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
}

.debug-button {
  width: 100%;
  background: #6c757d;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 24rpx;
  margin-top: 16rpx;
}

/* 响应式适配 */
@media (max-width: 400px) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .content {
    padding: 30rpx 20rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
  }
}
